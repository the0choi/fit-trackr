<%- include('../partials/header') %>

<h3 class="text-3xl font-bold underline">Details</h3><br>

    <table id="list">
      <thead>
        <tr>
          <th>Date</th>
          <th>Calories Consumed</th>
          <th>Calories Burned</th>
          <th>Resting Heart Rate</th>
          <th>Daily Steps</th>
          <th>Weight (kg)</th>
          <th>Sleep (hrs)</th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <% let [y, m, d] = healthOne.date.toISOString().substring(0, 10).split('-') %>
            <td><%= `${d}/${m}/${y}` %></td>
            <td><%= healthOne.caloriesIn %></td>
            <td><%= healthOne.caloriesOut %></td>
            <td><%= healthOne.restingHeartRate %></td>
            <td><%= healthOne.steps %></td>
            <td><%= healthOne.weight %></td>
            <td><%= healthOne.sleep %></td>
          </tr>
        </tbody>
  </table>

  <br>
  <form action="/health/<%= healthOne._id %>/edit" method="GET">
    <button class="action-button mt-3">
      <input type="submit" value="Edit">
    </button>
  </form>

  <br>
  <form action="/health/<%= healthOne._id %>?_method=DELETE" method="POST">
    <button class="action-button mt-3">
      <input type="submit" value="Delete">
    </button>
  </form>

<%- include('../partials/footer') %>